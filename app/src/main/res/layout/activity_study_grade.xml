<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_studygrade_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:contentDescription="뒤로가기"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_back"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="6"
            android:text="별점"
            android:textSize="20dp" />

        <RatingBar
            android:id="@+id/rb_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:contentDescription="동료 평가"
            android:isIndicator="false"
            android:max="5"
            android:numStars="5"
            android:rating="3"
            android:stepSize="0.5" />

    </LinearLayout>

    <EditText
        android:id="@+id/et_grade_comment"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:ems="10"
        android:hint="댓글을 작성해 주세요"
        android:inputType="textPersonName"
        tools:ignore="TouchTargetSizeCheck"
        tools:inputType="textMultiLine" />

    <Button
        android:id="@+id/btn_study_grade_submit"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FF78EFAD"
        android:text="제출하기"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />

</LinearLayout>