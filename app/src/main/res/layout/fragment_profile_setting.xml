<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_setting_cslayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">
   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/profile_setting_sub_cslayout"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent">
    <TextView
        android:id="@+id/profile_setting_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 수정 >"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/profile_setting_iv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_profile_person"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_setting_title_tv"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/profile_setting_camera_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_camera_gray"
        app:layout_constraintStart_toEndOf="@id/profile_setting_iv"
        app:layout_constraintBottom_toBottomOf="@id/profile_setting_iv"/>

    <TextView
        android:id="@+id/profile_setting_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profile_setting_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="NAME"
        android:textSize="33sp" />
   </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/profile_setting_OK_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="완료"
        android:textSize="40sp"
        android:background="#DF5637"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>