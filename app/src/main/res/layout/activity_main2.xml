<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_background"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:orientation="vertical" />

<View
    android:id="@+id/div_bottom"
    android:layout_width="match_parent"
    android:layout_height="3dp"
    android:background="#cdcdcd" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/btn_study"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:contentDescription="스터디"
        app:srcCompat="@drawable/ic_study" />

    <View
        android:id="@+id/divider13"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="?android:attr/listDivider" />

    <ImageButton
        android:id="@+id/btn_bulletin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:contentDescription="게시판"
        app:srcCompat="@drawable/ic_bulletin" />

    <View
        android:id="@+id/divider14"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="?android:attr/listDivider" />

    <ImageButton
        android:id="@+id/btn_calendar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:contentDescription="캘린더"
        app:srcCompat="@drawable/ic_calendar" />

    <View
        android:id="@+id/divider15"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="?android:attr/listDivider" />

    <ImageButton
        android:id="@+id/btn_personal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:contentDescription="개인정보"
        app:srcCompat="@drawable/ic_person" />
</LinearLayout>

</LinearLayout>