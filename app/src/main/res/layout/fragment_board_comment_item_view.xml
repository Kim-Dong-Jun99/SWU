<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="content"
        android:textSize="15dp"
        android:inputType="textMultiLine"
        android:id="@+id/commentContentTextView"/>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="10dp">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/commentWrittenTimeView"
           android:text="test"/>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="name"
           android:gravity="right"
           android:id="@+id/commentNameTextView"/>
   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/editing"
            android:id="@+id/commentEditButton"
            android:visibility="invisible"/>

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/delete"
            android:id="@+id/commentDeleteButton"
            android:layout_marginLeft="30dp"
            android:visibility="invisible"/>



    </LinearLayout>

</LinearLayout>